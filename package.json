{
  "name": "c40-todo-app",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "devDependencies": {
    "dotenv": "^8.2.0",
    "env-cmd": "^10.1.0",
    "husky": "^4.3.5",
    "nodemon": "^2.0.6",
    "prettier": "^2.2.1",
    "pretty-quick": "^3.1.0",
    "supertest": "^6.0.1"
  },
  "dependencies": {
    "@sendgrid/mail": "^7.4.0",
    "axios": "^0.21.0",
    "bcryptjs": "^2.4.3",
    "cloudinary": "^1.23.0",
    "concurrently": "^5.3.0",
    "cookie-parser": "^1.4.5",
    "express": "^4.17.1",
    "express-fileupload": "^1.2.0",
    "faker": "^5.1.0",
    "jest": "26.6.0",
    "jsonwebtoken": "^8.5.1",
    "moment": "^2.29.1",
    "moment-range": "^4.0.2",
    "mongoose": "^5.11.4",
    "morgan": "^1.10.0",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "validator": "^13.5.1"
  },
  "scripts": {
    "start": "node server.js",
    "server": "nodemon server.js",
    "client": "cd client && yarn run start",
    "dev": "concurrently \"yarn run server\" \"yarn run client\"",
    "db:reset": "node server/db/seeds/index.js",
    "prettier": "prettier '*/**/*.js' --write",
    "heroku-postbuild": "cd client && yarn && yarn run build",
    "test:local": "env-cmd -r ./config/test.env jest --runInBand --verbose",
    "test": "jest --runInBand"
  },
  "jest": {
    "testEnvironment": "node"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "engines": {
    "node": ">=14"
  }
}
